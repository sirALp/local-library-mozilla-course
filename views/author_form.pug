extends layout 

block content

    h1.mb-3 #{title}

    form.text-start(method="post")
        label(for="first_name",class='col-3 px-0') First name:
        input#first_name(type="text", name="first_name",
            value=(undefined===author ? '': author.first_name ),
            required, autofocus,placeholder="First name")
        br
        label(for="family_name",class='col-3  px-0') Family name:
        input#family_name(type="text", name="family_name",
            value=(undefined===author ? '': author.family_name ),
            required, placeholder="Family name")
        br
        label(for="date_of_birth",class='col-3 px-0') Date of birth:
        input#date_of_birth(type="date", name="date_of_birth",
            value=(undefined===author ? '': (author.date_of_birth ? author.date_of_birth.toISOString().slice(0,10) : '')))
        br
        label(for="date_of_death",class='col-3 px-0') Date of death:
        input#date_of_death(type="date", name="date_of_death",
            value=(undefined===author ? '': (author.date_of_death ? author.date_of_death.toISOString().slice(0,10) : '')))
        br
        button.btn.btn-primary(type="submit",class='mt-3 col-4 offset-1') Submit

    if errors
        ul.mt-5 
            for error in errors
                li.text-danger!= error.msg